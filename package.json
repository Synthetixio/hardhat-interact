{
  "name": "hardhat-interact",
  "version": "0.1.0",
  "description": "Execute commands on deployed contracts using a helpful TUI. Inspired by `hardhat interact` command on https://github.com/Synthetixio/synthetix",
  "repository": "github:Synthetixio/hardhat-interact",
  "author": "Daniel Beal",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin"
  ],
  "scripts": {
    "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/src/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@types/big.js": "^6.1.2",
    "@types/chai": "^4.2.22",
    "@types/fs-extra": "^5.0.4",
    "@types/lodash": "^4.14.177",
    "@types/mocha": "^9.0.0",
    "@types/node": "^8.10.66",
    "@types/sinon": "^10.0.6",
    "chai": "^4.3.4",
    "hardhat": "^2.0.0",
    "mocha": "^9.1.3",
    "prettier": "2.0.5",
    "sinon": "^12.0.1",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@synthetixio/wei": "^2.53.0-alpha2",
    "chalk": "^4.0.0",
    "ethers": "^5.5.1",
    "inquirer": "^8.2.0",
    "inquirer-search-list": "^1.2.6",
    "lodash": "^4.17.21"
  },
  "peerDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "hardhat": "^2.0.0"
  }
}
